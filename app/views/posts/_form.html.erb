<%= form_for @post do |f| %>
    <label>Description</label>
    <%= f.text_field :description, :class=>"large" %><br>
    <label>Keywords</label>
    <%= f.text_field :keywords, :class=>"large" %><br>
    <label>Раздел</label>
    <%= f.select :keywords, Theme.all.map{|v| [v.name, v.id]}, :class=>"large" %><br>
    <label>Заголовок</label>
    <%= f.text_field :title, :class=>"large" %><br>
    <label>Текст</label>
    <%= f.text_area :text, :class=>'editor large' %><br>
    <%= f.submit "Сохранить", :class=>"btn btn-large btn-primary" %>
<% end %>