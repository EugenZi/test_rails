<h1>Posts#new</h1>
<div class="span3" style="text-align: left; margin: 0 auto;">
	<%= form_for @post, :url => { :action => "create" }, :html => {:class => "nifty_form"} do |f| %>
		<% themes_array = Theme.all.map { |t| [t.name, t.id] } %>
		<label>Тема</label>
		<%= f.select :theme_id, themes_array %><br />
		<label>Описание</label>
		<%= f.text_field :description %><br />
		<label>Ключевые слова</label>
		<%= f.text_field :keywords %><br />
		<label>Заголовок</label>
		<%= f.text_field :title %><br />
		<label>Текст</label>
		<%= f.text_area :text, :size => "60x12" %><br />
	  	<%= f.submit "Создать" %>
	<% end %>
</div>
